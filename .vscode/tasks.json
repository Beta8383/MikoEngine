{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build core",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RenderEngine.Core/RenderEngine.Core.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build UI",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RenderEngine.UI/RenderEngine.UI.csproj",
                "-f:net7.0-maccatalyst",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/RenderEngine.UI/RenderEngine.UI.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}